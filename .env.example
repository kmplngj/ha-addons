# Environment variables for docker-compose
# Copy this file to .env and adjust values as needed

# Pixoo device IP address (required)
# Find your device IP in your router or Divoom app
PIXOO_HOST=192.168.1.100

# Port mapping (host:container)
# Default 5001 to avoid conflict with macOS AirPlay on port 5000
PIXOO_REST_PORT=5001

# Screen size: 16, 32, or 64
PIXOO_SCREEN_SIZE=64

# Enable debug logging
PIXOO_DEBUG=false
PIXOO_REST_DEBUG=false

# Connection retry attempts (1-30)
PIXOO_CONNECTION_RETRIES=10

# Timezone
TZ=Europe/Berlin
